CREATE TABLE TB_GENERAL_MEMBER
(
	MEMBER_ID                      VARCHAR2(20)   NOT NULL ,
	PASSWORD                       VARCHAR2(200)  NOT NULL ,
	PASSWORD_HINT_CONTENTS         VARCHAR2(500)  NULL ,
	PASSWORD_CNSR_CONTENTS         VARCHAR2(500)  NULL ,
	IHIDNUM                        VARCHAR2(200)  NULL ,
	MEMBER_NAME                    VARCHAR2(50)   NOT NULL ,
	ZIP_CODE                       VARCHAR2(6)    NOT NULL ,
	ADDRESS                        VARCHAR2(100)  NOT NULL ,
	MEMBER_STATUS_CODE             VARCHAR2(3)    NULL ,
	DETAIL_ADDRESS                 VARCHAR2(100)  NULL ,
	MOBILE_PHONE_NUMBER            VARCHAR2(20)   NOT NULL ,
	PHONE_NUMBER                   VARCHAR2(20)   NULL ,
	GROUP_ID                       VARCHAR2(20)   NULL ,
	MEMBER_EMAIL_ADDRESS           VARCHAR2(60)   NULL ,
	SUBSCRIBE_DATE                 DATE           NULL ,
	SEXDSTN_CODE                   VARCHAR2(3)    NULL ,
	LOCK_YN                        VARCHAR2(1)    NULL,
	LOCK_COUNT                     NUMBER(4)      NULL,
	LOCK_LAST_DATE                 DATE           NULL,
	REGISTRATION_DATE              DATE           NULL, 
	REGISTER_ID                    VARCHAR2(20)   NULL, 
	UPDATE_DATE                    DATE           NULL, 
	UPDATE_USER_ID                 VARCHAR2(20)   NULL,
CONSTRAINT  TB_GENERAL_MEMBER_PK PRIMARY KEY (MEMBER_ID),
CONSTRAINT  TB_GENERAL_MEMBER_FK1 FOREIGN KEY (GROUP_ID) REFERENCES TB_AUTHORITY_GROUP_INFORMATION(GROUP_ID) ON DELETE CASCADE
);


COMMENT ON TABLE TB_GENERAL_MEMBER IS '일반회원'; 
COMMENT ON COLUMN TB_GENERAL_MEMBER.MEMBER_ID IS '회원ID'; 
COMMENT ON COLUMN TB_GENERAL_MEMBER.PASSWORD IS '비밀번호'; 
COMMENT ON COLUMN TB_GENERAL_MEMBER.PASSWORD_HINT_CONTENTS IS '비밀번호힌트내용'; 
COMMENT ON COLUMN TB_GENERAL_MEMBER.PASSWORD_CNSR_CONTENTS IS '비밀번호정답내용'; 
COMMENT ON COLUMN TB_GENERAL_MEMBER.IHIDNUM IS '주민등록번호'; 
COMMENT ON COLUMN TB_GENERAL_MEMBER.MEMBER_NAME IS '회원이름'; 
COMMENT ON COLUMN TB_GENERAL_MEMBER.ZIP_CODE IS '우편번호'; 
COMMENT ON COLUMN TB_GENERAL_MEMBER.ADDRESS IS '주소'; 
COMMENT ON COLUMN TB_GENERAL_MEMBER.MEMBER_STATUS_CODE IS '회원상태코드'; 
COMMENT ON COLUMN TB_GENERAL_MEMBER.DETAIL_ADDRESS IS '상세주소'; 
COMMENT ON COLUMN TB_GENERAL_MEMBER.MOBILE_PHONE_NUMBER IS '휴대전화번호'; 
COMMENT ON COLUMN TB_GENERAL_MEMBER.PHONE_NUMBER IS '전화번호'; 
COMMENT ON COLUMN TB_GENERAL_MEMBER.GROUP_ID IS '그룹ID'; 
COMMENT ON COLUMN TB_GENERAL_MEMBER.MEMBER_EMAIL_ADDRESS IS '회원이메일주소'; 
COMMENT ON COLUMN TB_GENERAL_MEMBER.SUBSCRIBE_DATE IS '가입일자'; 
COMMENT ON COLUMN TB_GENERAL_MEMBER.SEXDSTN_CODE IS '성별코드'; 
COMMENT ON COLUMN TB_GENERAL_MEMBER.LOCK_YN IS '잠금여부';
COMMENT ON COLUMN TB_GENERAL_MEMBER.LOCK_COUNT IS '잠금횟수';
COMMENT ON COLUMN TB_GENERAL_MEMBER.LOCK_LAST_DATE IS '잠금최종일시';
COMMENT ON COLUMN TB_GENERAL_MEMBER.REGISTRATION_DATE IS '등록일시';
COMMENT ON COLUMN TB_GENERAL_MEMBER.REGISTER_ID IS '등록자ID';
COMMENT ON COLUMN TB_GENERAL_MEMBER.UPDATE_DATE IS '수정일시';
COMMENT ON COLUMN TB_GENERAL_MEMBER.UPDATE_USER_ID IS '수정자ID';



-- 권한 그룹 정보 테이블
CREATE TABLE TB_AUTHORITY_GROUP_INFORMATION
(
	GROUP_ID                       VARCHAR2(20)      NOT NULL ,
	GROUP_NAME                     VARCHAR2(60)  NOT NULL ,
	GROUP_CREATION_DATE            DATE          NOT NULL ,
	GROUP_DESCRIPTION              VARCHAR2(100) NULL ,
	REGISTRATION_DATE              DATE           NULL, 
	REGISTER_ID                    VARCHAR2(20)   NULL, 
	UPDATE_DATE                    DATE           NULL, 
	UPDATE_USER_ID                 VARCHAR2(20)   NULL,
CONSTRAINT  TB_AUTHORITY_GROUP_INFORMATION_PK PRIMARY KEY (GROUP_ID)
);


COMMENT ON TABLE TB_AUTHORITY_GROUP_INFORMATION IS '권한그룹정보'; 
COMMENT ON COLUMN TB_AUTHORITY_GROUP_INFORMATION.GROUP_ID IS '그룹ID'; 
COMMENT ON COLUMN TB_AUTHORITY_GROUP_INFORMATION.GROUP_NAME IS '그룹이름'; 
COMMENT ON COLUMN TB_AUTHORITY_GROUP_INFORMATION.GROUP_CREATION_DATE IS '그룹생성일자'; 
COMMENT ON COLUMN TB_AUTHORITY_GROUP_INFORMATION.GROUP_DESCRIPTION IS '그룹설명'; 
COMMENT ON COLUMN TB_AUTHORITY_GROUP_INFORMATION.REGISTRATION_DATE IS '등록일시';
COMMENT ON COLUMN TB_AUTHORITY_GROUP_INFORMATION.REGISTER_ID IS '등록자ID';
COMMENT ON COLUMN TB_AUTHORITY_GROUP_INFORMATION.UPDATE_DATE IS '수정일시';
COMMENT ON COLUMN TB_AUTHORITY_GROUP_INFORMATION.UPDATE_USER_ID IS '수정자ID';


CREATE TABLE TB_COMMON_CLASSIFICATION_CODE
(
	CLASSIFICATION_CODE                 VARCHAR2(3)  NOT NULL ,
	CLASSIFICATION_CODE_NAME            VARCHAR2(60)  NULL ,
	CLASSIFICATION_CODE_DESCRIPTION     VARCHAR2(200)  NULL ,
	USE_YN                              VARCHAR2(1)  NULL ,
	REGISTRATION_DATE              DATE           NULL, 
	REGISTER_ID                    VARCHAR2(20)   NULL, 
	UPDATE_DATE                    DATE           NULL, 
	UPDATE_USER_ID                 VARCHAR2(20)   NULL,
CONSTRAINT  TB_COMMON_CLASSIFICATION_CODE_PK PRIMARY KEY (CLASSIFICATION_CODE)
);



COMMENT ON TABLE TB_COMMON_CLASSIFICATION_CODE IS '공통분류코드'; 
COMMENT ON COLUMN TB_COMMON_CLASSIFICATION_CODE.CLASSIFICATION_CODE IS '분류코드'; 
COMMENT ON COLUMN TB_COMMON_CLASSIFICATION_CODE.CLASSIFICATION_CODE_NAME IS '분류코드이름'; 
COMMENT ON COLUMN TB_COMMON_CLASSIFICATION_CODE.CLASSIFICATION_CODE_DESCRIPTION IS '분류코드설명'; 
COMMENT ON COLUMN TB_COMMON_CLASSIFICATION_CODE.USE_YN IS '사용여부'; 
COMMENT ON COLUMN TB_COMMON_CLASSIFICATION_CODE.REGISTRATION_DATE IS '등록일시';
COMMENT ON COLUMN TB_COMMON_CLASSIFICATION_CODE.REGISTER_ID IS '등록자ID';
COMMENT ON COLUMN TB_COMMON_CLASSIFICATION_CODE.UPDATE_DATE IS '수정일시';
COMMENT ON COLUMN TB_COMMON_CLASSIFICATION_CODE.UPDATE_USER_ID IS '수정자ID';



CREATE TABLE TB_COMMON_CODE
(
	CODE_ID                        VARCHAR2(6)  NOT NULL ,
	CODE_ID_NAME                   VARCHAR2(60)  NULL ,
	CODE_ID_DESCRIPTION            VARCHAR2(200)  NULL ,
	USE_YN                         VARCHAR2(1)  NULL ,
	CLASSIFICATION_CODE            VARCHAR2(3)  NULL ,
	REGISTRATION_DATE              DATE           NULL, 
	REGISTER_ID                    VARCHAR2(20)   NULL, 
	UPDATE_DATE                    DATE           NULL, 
	UPDATE_USER_ID                 VARCHAR2(20)   NULL,
CONSTRAINT  TB_COMMON_CODE_PK PRIMARY KEY (CODE_ID),
CONSTRAINT  TB_COMMON_CODE_FK1 FOREIGN KEY (CLASSIFICATION_CODE) REFERENCES TB_COMMON_CLASSIFICATION_CODE(CLASSIFICATION_CODE) ON DELETE SET NULL
);



CREATE INDEX TB_COMMON_CODE_i01 ON TB_COMMON_CODE
(CLASSIFICATION_CODE  ASC);

 
COMMENT ON TABLE TB_COMMON_CODE IS '공통코드'; 
COMMENT ON COLUMN TB_COMMON_CODE.CODE_ID IS '코드ID'; 
COMMENT ON COLUMN TB_COMMON_CODE.CODE_ID_NAME IS '코드ID명'; 
COMMENT ON COLUMN TB_COMMON_CODE.CODE_ID_DESCRIPTION IS '코드ID설명'; 
COMMENT ON COLUMN TB_COMMON_CODE.USE_YN IS '사용여부'; 
COMMENT ON COLUMN TB_COMMON_CODE.CLASSIFICATION_CODE IS '분류코드'; 
COMMENT ON COLUMN TB_COMMON_CODE.REGISTRATION_DATE IS '등록일시';
COMMENT ON COLUMN TB_COMMON_CODE.REGISTER_ID IS '등록자ID';
COMMENT ON COLUMN TB_COMMON_CODE.UPDATE_DATE IS '수정일시';
COMMENT ON COLUMN TB_COMMON_CODE.UPDATE_USER_ID IS '수정자ID';




CREATE TABLE TB_COMMON_DETAIL_CODE
(
	CODE_ID               VARCHAR2(6)  NOT NULL ,
	CODE                  VARCHAR2(15)  NOT NULL ,
	CODE_NAME               VARCHAR2(60)  NULL ,
	CODE_DESCRIPTION               VARCHAR2(200)  NULL ,
	USE_YN                VARCHAR2(1)  NULL ,
	SORT                  NUMBER(10) NULL,
	REGISTRATION_DATE              DATE           NULL, 
	REGISTER_ID                    VARCHAR2(20)   NULL, 
	UPDATE_DATE                    DATE           NULL, 
	UPDATE_USER_ID                 VARCHAR2(20)   NULL,
CONSTRAINT  TB_COMMON_DETAIL_CODE_PK PRIMARY KEY (CODE_ID,CODE),
CONSTRAINT  TB_COMMON_DETAIL_CODE_FK1 FOREIGN KEY (CODE_ID) REFERENCES TB_COMMON_CODE(CODE_ID)
);



CREATE INDEX TB_COMMON_DETAIL_CODE_i01 ON TB_COMMON_DETAIL_CODE
(CODE_ID  ASC);


COMMENT ON TABLE TB_COMMON_DETAIL_CODE IS '공통상세코드'; 
COMMENT ON COLUMN TB_COMMON_DETAIL_CODE.CODE_ID IS '코드ID'; 
COMMENT ON COLUMN TB_COMMON_DETAIL_CODE.CODE IS '코드'; 
COMMENT ON COLUMN TB_COMMON_DETAIL_CODE.CODE_NAME IS '코드명'; 
COMMENT ON COLUMN TB_COMMON_DETAIL_CODE.CODE_DESCRIPTION IS '코드설명'; 
COMMENT ON COLUMN TB_COMMON_DETAIL_CODE.USE_YN IS '사용여부'; 
COMMENT ON COLUMN TB_COMMON_DETAIL_CODE.SORT IS '순서'; 
COMMENT ON COLUMN TB_COMMON_DETAIL_CODE.REGISTRATION_DATE IS '등록일시';
COMMENT ON COLUMN TB_COMMON_DETAIL_CODE.REGISTER_ID IS '등록자ID';
COMMENT ON COLUMN TB_COMMON_DETAIL_CODE.UPDATE_DATE IS '수정일시';
COMMENT ON COLUMN TB_COMMON_DETAIL_CODE.UPDATE_USER_ID IS '수정자ID';











